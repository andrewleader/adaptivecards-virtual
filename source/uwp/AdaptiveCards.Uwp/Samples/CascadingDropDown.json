{
  "type": "AdaptiveCard",
  "version": "1.2",
  "$sampleData": {
    "makes": [
      {
        "title": "Mazda",
        "models": [
          "3",
          "Miata",
          "RX8"
        ]
      },
      {
        "title": "Toyota",
        "models": [
          "4Runner",
          "Camry",
          "Highlander",
          "Tacoma"
        ]
      }
    ]
  },
  "body": [
    {
      "type": "TextBlock",
      "text": "Make"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "make",
      "style": "compact",
      "isMultiSelect": false,
      "choices": [
        {
          "$data": "{makes}",
          "title": "{title}",
          "value": "{title}"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Model"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "model",
      "style": "compact",
      "isMultiSelect": false,
      "choices": [
        {
          "$when": "{inputs.make.value == makes[0].title}",
          "$data": "{makes[0].models}",
          "title": "{$data}",
          "value": "{$data}"
        },
        {
          "$when": "{inputs.make.value == makes[1].title}",
          "$data": "{makes[1].models}",
          "title": "{$data}",
          "value": "{$data}"
        }
      ]
    }
  ]
}